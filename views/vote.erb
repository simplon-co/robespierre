<div class="col-md-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Votes</h3>
		</div>
		<div>
			<form id="search_form" class="form-horizontal" role="form" method="post"      action="/search">
				<div class="form-group">
					<label for="input" class="col-sm-3 control-label">Change</label>
					<div class="col-sm-8 ">
						<input name="input" type="text" class="form-control" id="input" placeholder="hashtag">
					</div>
				</div>
			</form>
		</div>
		<div id="conteneur_vote" class="panel-body">
			<div id="colonne_vote_1" class="colonne col-md-6">
				<p class="tableau_votes titre_colonnes">Morceaux</p>
				<hr class="hr_titre_vote">
				<div class="tableau_votes">
					<%= @redis.keys("PSG")[0] %>
				</div>
				<hr class="hr_vote">
				<div class="tableau_votes">
					<%= @redis.keys("obama")[0] %>
				</div>
				<hr class="hr_vote">
				<div class="tableau_votes dernieres_div_tableau">
					<%= @redis.keys("justin bieber")[0] %>
				</div>
			</div>
			<div class="colonne col-md-6">
				<p class="tableau_votes titre_colonnes">Compteur</p>
				<hr class="hr_titre_vote">
				<div class="tableau_votes">
					<%= @redis.get "PSG" %>
				</div>
				<hr class="hr_vote">
				<div class="tableau_votes">
					<%= @redis.get "obama" %>
				</div>
				<hr class="hr_vote">
				<div class="tableau_votes dernieres_div_tableau">
					<%= @redis.get "justin bieber" %>
				</div>	
			</div>
		</div>
		<div class="panel-body">
			<form class="inline_button" method="post" action="/vote">
				<% if @redis.get("demarrer") == "off" %>
				<input id="Demarrer" class="btn btn-success" type="submit" value="Démarrer" />
				<% else %>
				<input id="Arreter" class="btn btn-danger" type="submit" value="Arrêter" />
				<% end %>
			</form>
			<form class="inline_button" method="post" action="/remettre_a_zero">
				<input id="remise_a_zero" class=" btn btn-danger" type="submit" value="remettre à zéro"/>
			</form>
		</div>
	</div>
</div>